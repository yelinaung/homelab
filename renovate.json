{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^github-runner\\/Dockerfile$/",
        "/^\\.forgejo\\/ci\\.Dockerfile$/"
      ],
      "matchStrings": [
        "(?m)^ARG\\s+TERRAFORM_VERSION=(?<currentValue>[0-9A-Za-z._-]+)\\s*$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hashicorp/terraform",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^github-runner\\/Dockerfile$/",
        "/^\\.forgejo\\/ci\\.Dockerfile$/"
      ],
      "matchStrings": [
        "(?m)^ARG\\s+TFLINT_VERSION=(?<currentValue>[0-9A-Za-z._-]+)\\s*$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "terraform-linters/tflint",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.forgejo\\/ci\\.Dockerfile$/"
      ],
      "matchStrings": [
        "(?m)^ARG\\s+GO_VERSION=(?<currentValue>[0-9A-Za-z._-]+)\\s*$"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.*)$",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.forgejo\\/ci\\.Dockerfile$/"
      ],
      "matchStrings": [
        "(?m)^ARG\\s+NODE_VERSION=(?<currentValue>[0-9A-Za-z._-]+)\\s*$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nodejs/node",
      "extractVersionTemplate": "^v?(?<version>\\d+)(?:\\..*)?$",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^github-runner\\/Dockerfile$/",
        "/^\\.forgejo\\/ci\\.Dockerfile$/"
      ],
      "matchStrings": [
        "(?m)^ARG\\s+GITLEAKS_VERSION=(?<currentValue>[0-9A-Za-z._-]+)\\s*$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gitleaks/gitleaks",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ]
}
