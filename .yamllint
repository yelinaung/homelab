---
extends: default
ignore:
  - .venv/
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments:
    min-spaces-from-content: 1 # ansible-lint requirement
  comments-indentation: disable
  document-start: disable
  empty-lines:
    max: 3
    level: error
  hyphens:
    level: error
  indentation: disable
  key-duplicates: enable
  line-length:
    max: 120 # ansible-lint compatible
  new-line-at-end-of-file: disable
  new-lines:
    type: unix
  trailing-spaces: disable
  truthy:
    allowed-values: ["true", "false", "yes", "no"] # ansible-lint compatible
  octal-values:
    forbid-implicit-octal: true # ansible-lint requirement
    forbid-explicit-octal: true # ansible-lint requirement
